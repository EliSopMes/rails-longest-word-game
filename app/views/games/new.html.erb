<div class="m-4">
<h1>New game</h1>

  <ul>
    <% @letters.each do |letter| %>
      <li class="btn btn-primary btn-lg mr-4"><%= letter %></li>
    <% end %>
  </ul>
  <% @letters %>
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="answer">What is the longest word you can find?</label>
    <br>
    <%= hidden_field_tag :array, @letters %>
    <%# <input type="hidden" name="array" value="<%= @letters%>
    <input type="text" name="answer">
    <input type="submit" class="btn btn-dark" value="Play">
  </form>
</div>
